{
  "name": "mandaact",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@9.14.2",
  "workspaces": [
    "apps/web",
    "packages/shared"
  ],
  "scripts": {
    "dev": "pnpm --filter @mandaact/web dev",
    "dev:web": "pnpm --filter @mandaact/web dev",
    "dev:mobile": "pnpm --filter @mandaact/mobile start",
    "build": "turbo run build",
    "build:web": "npm run build --workspace=@mandaact/web",
    "build:mobile": "pnpm --filter @mandaact/mobile build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  }
}
