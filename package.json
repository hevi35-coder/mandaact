{
  "name": "mandaact",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "pnpm --filter @mandaact/web dev",
    "dev:web": "pnpm --filter @mandaact/web dev",
    "dev:mobile": "pnpm --filter @mandaact/mobile start",
    "build": "turbo run build --filter=@mandaact/web --filter=@mandaact/shared",
    "build:web": "pnpm --filter @mandaact/web build",
    "build:mobile": "pnpm --filter @mandaact/mobile build",
    "lint": "turbo run lint --filter=@mandaact/web --filter=@mandaact/shared",
    "type-check": "turbo run type-check --filter=@mandaact/web --filter=@mandaact/shared",
    "test": "turbo run test --filter=@mandaact/web --filter=@mandaact/shared",
    "clean": "turbo run clean && rm -rf node_modules pnpm-lock.yaml",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "dependencies": {
    "expo": "~52.0.48",
    "react": "18.3.1",
    "react-native": "0.76.9"
  }
}
